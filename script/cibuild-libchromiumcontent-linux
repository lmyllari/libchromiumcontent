#!/usr/bin/env bash

set -e
set -o pipefail

docker build -t libchromiumcontent-linux .

docker run \
  --rm \
  --env TARGET_ARCH="$TARGET_ARCH" \
  libchromiumcontent-linux /workspace/libchromiumcontent/script/cibuild

# Delete generated archives
rm -rf dist
rm -rf libchromiumcontent.zip
rm -rf libchromiumcontent-static.zip
