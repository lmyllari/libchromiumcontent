#!/usr/bin/env bash

set -e
set -o pipefail

rm -rf s3credentials
rm -rf dist
rm -rf libchromiumcontent.zip
rm -rf libchromiumcontent-static.zip

cp ../../config/s3credentials s3credentials

docker build -t libchromiumcontent-linux .

docker run \
  --rm \
  --env TARGET_ARCH="$TARGET_ARCH" \
  -v "$PWD":/workspace/libchromiumcontent \
  -v /var/lib/jenkins/config:/config \
  -w /workspace/libchromiumcontent \
  libchromiumcontent-linux script/cibuild
